@font-face {
    font-family: "{{ fontName }}";
    src: {{{ src }}};
}

:global({{ baseTag }}) {
    line-height: 1;
}

:global({{ baseTag }}[class^="{{classPrefix}}"]) {
    display: inline-block;
    font-style: normal;
    font-weight: normal !important;
    font-variant: normal;
    vertical-align: baseline;
    text-align: center;
    text-rendering: optimizeLegibility;
    text-transform: none;
    line-height: 1;
    text-size-adjust: 100%;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

:global({{ baseTag }}[class*=" {{classPrefix}}"]) {
    display: inline-block;
    font-style: normal;
    font-weight: normal !important;
    font-variant: normal;
    vertical-align: baseline;
    text-align: center;
    text-rendering: optimizeLegibility;
    text-transform: none;
    line-height: 1;
    text-size-adjust: 100%;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

:global({{ baseTag }}[class^="{{classPrefix}}"]:before) {
    display: block;
    font-family: lugia-icon;
    line-height: 1;
}

:global({{ baseTag }}[class*=" {{classPrefix}}"]:before) {
    display: block;
    font-family: lugia-icon;
    line-height: 1;
}

{{# each codepoints }}
:global(.{{ ../classPrefix }}{{ @key }}:before) {
    content: "\\{{ this }}";
}
{{/ each }}

:global(.{{ classPrefix }}utils-loading:before) {
    display: block;
    animation: loadingCircle 1s infinite linear;
}

@keyframes loadingCircle {
    0% {
        transform-origin: 50% 50%;
        transform: rotate(0deg);
    }
    100% {
        transform-origin: 50% 50%;
        transform: rotate(360deg);
    }
}
